<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration name="Foundation.SitecoreMods" extends="Foundation.Serialization.Base" description="Sitecore Mods Foundation" patch:after="configuration[@name='Foundation.Serialization.Base']">
          <predicate>
            <include name="FormBuilderRenderings" database="core" path="/sitecore/client/Applications/FormsBuilder/Components/Layouts/Renderings/SitecoreMods">
              <exclude children="true" />
            </include>
            <include name="Feature" database="core" path="/sitecore/templates/Feature/SitecoreMods">
              <exclude children="true" />
            </include>
            <include name="Foundation" database="core" path="/sitecore/templates/Foundation/SitecoreMods">
              <exclude children="true" />
            </include>
          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>